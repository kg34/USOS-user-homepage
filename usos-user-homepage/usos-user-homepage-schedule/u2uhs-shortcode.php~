<?php

function uuhs_shortcode_function($atts) {

	/*$atts = shortcode_atts(array(
		'temat' => 'ogolny',
		'styl' => 't'
	), $atts);*/

	$current_user = wp_get_current_user();
	return print_r($current_user, true);
	$user_id = $current_user->ID;

	if (! $user_id)
		return '';

	if (uuhs_usos_user($user_id))
		uuhs_getUserSchedule($user_id);
	
	$monday_date = date('Y-m-d', last_monday(date('Y-m-d')));
	$dayNames = array("Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday", "Sunday");
	$output = '<table class="form-table editcomment">';// class="form table">';
	$date = $monday_date;
	for ($i = 0; $i < 7; $i++) {
		$events = uuhs_database_get_events($date, $user_id);
		$output = $output."<tr><td colspan=4>".__($dayNames[$i])." ".short_date($date)."</td></tr>";
		foreach ( $events as $event ) {
			$output = $output.'<tr><td>'.$event->start_hour.'</td><td>'.$event->end_hour.'</td><td>'.$event->title.'</td><td>'.$event->description.'</td></tr>';
		}
		$date = date('Y-m-d', next_day($date));
	}
	$output = $output."</table>";
	return $output;
}

add_shortcode('uuh_schedule', 'uuhs_shortcode_function');
	
function uuhs_getUserSchedule($user_id) {

	if( ! class_exists( 'Hybrid_Auth', false ) ) {
		require_once WP_PLUGIN_DIR . "/wordpress-social-login/hybridauth/Hybrid/Auth.php";
	}
	$config = wsl_process_login_build_provider_config( "Usosweb");
	try {
		$hybridauth = new Hybrid_Auth( $config );
		$adapter = $hybridauth->authenticate( "Usosweb" );
	}
	catch( Exception $e ) {
		return "Ooophs, we got an error: " . $e->getMessage();
	}

	$monday_date = date('Y-m-d', last_monday(date('Y-m-d')));
// 	$monday_date = '2015-01-19';

	//return print_r($adapter->getUserProfile(), true);
	$response = $adapter->api()->get( 'https://usosapps.uw.edu.pl/services/tt/user?start='.$monday_date.'&days=7&fields=start_time|end_time|name' );
	
	uuhs_database_delete_usos_events($user_id);
	foreach ( $response as $event )
		uuhs_add_event($event, $user_id);
	//return (property_exists($response,'id'))?$response->id:"";
	//return $start[0]."</br>".$start[1];
	//return print_r($response[0], true)."</br></br>".print_r($response[1], true)."</br></br>".print_r($response[2], true)."</br></br>".print_r($response, true);
}

//require_once( USOS_HOMEPAGE_SCHEDULE_ABS_PATH . '/includes/settings/uuhs.database.php' );

function uuhs_add_event($response, $user_id) {
	$event = array(
		'title' => $response->name->pl,
		'user_id' => $user_id,
		'description' => '',
		'source' => 'usos'
	);
	$start = explode(" ", $response->start_time);
	$end = explode(" ", $response->end_time);
	$time = array(
		'date' => $start[0],
		'day_of_week' => 0,
		'start_hour'=> $start[1],
		'end_hour' => $end[1],
		'source' => 'usos'
	);
	$times = array(
		0 => $time,
	);
	uuhs_database_add_event($event, $times);
}

function short_date($date) {
	if (!is_numeric($date))
		$date = strtotime($date);
	return date('j.m', $date);
}

function next_day($date) {
	if (!is_numeric($date))
		$date = strtotime($date);
	return strtotime(
		'+1 day',
		$date
	);
}

function last_monday($date) {
	if (!is_numeric($date))
		$date = strtotime($date);
	if (date('w', $date) == 1)
		return $date;
	else
		return strtotime(
			'last monday',
			$date
		);
}
?>
